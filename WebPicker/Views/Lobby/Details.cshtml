@model WebPicker.Models.LobbyViewModels.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>IGame</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GameId)
        </dd>
        <dt>
            <p>Owner</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owner.Nickname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GameState)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GameState)
        </dd>
        <dt>
            <p>Players</p>
        </dt>
        <dd>
            <p>@Html.DisplayFor(model => model.PlayersAmount) / @Html.DisplayFor(model => model.MaxPlayersAmount)</p>
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-sm-2">@Html.ActionLink("Back", "Index", "Lobby", null, null, null, null, new { @class = "btn btn-primary" })</div>
    @{
        if (Model.IsUserOwner)
        {
            <div class="col-sm-2">@Html.ActionLink("Start", "Start", "Game", null, null, null, new { gameId = Model.GameId }, new { @class = "btn btn-success" })</div>
            <div class="col-sm-2">@Html.ActionLink("Reset", "Reset", "Game", null, null, null, new { gameId = Model.GameId }, new { @class = "btn btn-primary" })</div>
        }
    }
</div>